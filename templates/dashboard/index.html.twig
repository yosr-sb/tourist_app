{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <h1 class="title has-text-centered mb-6">Bienvenue sur votre Dashboard</h1>

        <div class="columns is-multiline is-centered">

            {# Carte Destinations #}
            <div class="column is-one-third-desktop is-half-tablet">
                <a href="{{ path('destination_list') }}">
                    <div class="dashboard-card box" style="background: linear-gradient(135deg, #6CC1FF, #3A8DFF); color: white;">
                        <span class="icon is-large mb-3">
                            <i class="fas fa-map-marker-alt fa-3x"></i>
                        </span>
                        <h2 class="title is-4">Destinations</h2>
                        <p class="subtitle is-6">Gérez vos destinations touristiques et ajoutez de nouvelles locations.</p>
                    </div>
                </a>
            </div>

            {# Carte Tours #}
            <div class="column is-one-third-desktop is-half-tablet">
                <a href="{{ path('tour_list') }}">
                    <div class="dashboard-card box" style="background: linear-gradient(135deg, #28E5A8, #00C78C); color: white;">
                        <span class="icon is-large mb-3">
                            <i class="fas fa-hiking fa-3x"></i>
                        </span>
                        <h2 class="title is-4">Tours</h2>
                        <p class="subtitle is-6">Visualisez, éditez ou ajoutez des tours pour vos clients.</p>
                    </div>
                </a>
            </div>

            {# Carte Réservations #}
            <div class="column is-one-third-desktop is-half-tablet">
                <a href="{{ path('reservation_list') }}">
                    <div class="dashboard-card box" style="background: linear-gradient(135deg, #FFD166, #FF9F1C); color: white;">
                        <span class="icon is-large mb-3">
                            <i class="fas fa-calendar-check fa-3x"></i>
                        </span>
                        <h2 class="title is-4">Réservations</h2>
                        <p class="subtitle is-6">Consultez et gérez les réservations de vos clients.</p>
                    </div>
                </a>
            </div>

        </div>
    </div>
</section>

<style>
.dashboard-card {
    border-radius: 15px;
    padding: 2rem;
    min-height: 250px; /* hauteur uniforme */
    display: flex;
    flex-direction: column;
    justify-content: center; /* centre verticalement */
    align-items: center;    /* centre horizontalement */
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
}
.dashboard-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
}
.dashboard-card .icon {
    transition: transform 0.3s;
}
.dashboard-card:hover .icon {
    transform: scale(1.2);
}
</style>

<!-- Font Awesome pour les icônes -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}

