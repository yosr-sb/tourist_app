{# templates/destination/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Destinations{% endblock %}

{% block body %}
<h1 class="title is-3 mb-4">Destinations</h1>

<a href="{{ path('destination_add') }}" class="button is-primary mb-4">
    Ajouter une destination
</a>

<table class="table is-striped is-hoverable is-fullwidth">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.nom }}</td>
                <td>{{ destination.description|length > 100 ? destination.description|slice(0, 100) ~ '...' : destination.description }}</td>
                <td>
                    {% if destination.image %}
                        <figure class="image is-128x128">
                            <img src="/uploads/{{ destination.image }}" alt="Image de {{ destination.nom }}">
                        </figure>
                    {% endif %}
                </td>
                <td>
                    <div class="buttons">
                        <a href="{{ path('destination_edit', {id: destination.id}) }}" class="button is-small is-info">
                            Modifier
                        </a>
                        <a href="{{ path('destination_delete', {id: destination.id}) }}" class="button is-small is-danger" 
                           onclick="return confirm('Voulez-vous vraiment supprimer cette destination ?');">
                            Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="has-text-centered">Aucune destination trouv√©e.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
